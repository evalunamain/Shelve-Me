<section class="new-book">

  <form action="<%= books_url %>" method="post" class="new-book">
    <%= auth_token %>
    <fieldset class="form-fieldset">
      <div class="form-title"><h3>Add a Book</h3></div>
      <div class="input">
        <label for="author">Author ID</label>
        <input type="text"
        id="author"
        name="book[author_id]"
        placeholder="<%= @book.errors.messages[:author_id] ? @book.errors.messages[:author_id][0] : @book.author_id %>"
        class=" <% if @book.errors.messages[:author_id] %>
        <%= "error" %>
        <% end %>">
      </input>

      <label for="title">Title</label>
      <input type="text"
      id="title"
      name="book[title]"
      placeholder="<%= @book.errors.messages[:title] ? @book.errors.messages[:title][0] : @book.title %>"
      class=" <% if @book.errors.messages[:title] %>
      <%= "error" %>
      <% end %>">
    </input>

    <label for="isbn">ISBN</label>
    <input type="text"
    id="isbn"
    name="book[isbn]"
    placeholder="<%= @book.errors.messages[:isbn] ? @book.errors.messages[:isbn][0] : @book.isbn %>"
    class=" <% if @book.errors.messages[:isbn] %>
    <%= "error" %>
    <% end %>">
  </input>

  <label for="cover">Cover url</label>
  <input type="text" id="cover" name="book[cover]"></input>
</div>

<div class="submit">
  <button>Add Book</button>
</div>
</fieldset>
</form>
<section>
  
