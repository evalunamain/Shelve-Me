<a href="#books" class="title">Books Index</a>
<section class="profile">
  <img src="<%= book.escape('cover') %>">

  <h3 class="title"> <%= book.escape('title') %></h3>
  <a href="#/authors/<%= book.author().id %>" class="author"><%= book.author().escape('name') %></a>
  <h4> Average Rating: <% if (book.escape('rating')) { %>
    <%= book.escape('rating') %> </h4>
  <% } else { %>
    <span class="exception"> This book has not been rated yet. </span> </h4>
  <% } %>
  <% if (ShelfLife.currentUser) {%>
    <span class="rating">
    <input type="radio" class="rating-input"
        id="rating-input-1-5" name="rating-input-1">
    <label for="rating-input-1-5" class="rating-star"></label>
    <input type="radio" class="rating-input"
        id="rating-input-1-4" name="rating-input-1">
    <label for="rating-input-1-4" class="rating-star"></label>
    <input type="radio" class="rating-input"
        id="rating-input-1-3" name="rating-input-1">
    <label for="rating-input-1-3" class="rating-star"></label>
    <input type="radio" class="rating-input"
        id="rating-input-1-2" name="rating-input-1">
    <label for="rating-input-1-2" class="rating-star"></label>
    <input type="radio" class="rating-input"
        id="rating-input-1-1" name="rating-input-1">
    <label for="rating-input-1-1" class="rating-star"></label>
  </span>
  <% } %>

  <p><%= book.escape('description') %> </p>

<% if (ShelfLife.currentUser) {%>
    <div class="add-to-shelf">
      <div class="submit">
        <button class="js-modal-open">Add book to shelf</button>
      </div>

      <div class="modal">
        <form class="modal-form">

          <% ShelfLife.currentUser.shelves().each(function (shelf) { %>
            <div class="input existing-shelf">
              <label>
                <input type="checkbox"
                name="shelved_book[shelf_id]"
                value="<%= shelf.id %>"
                class="modal-checkbox"
                <% if (book.onShelf(shelf.id)) { %>
                  data-on-shelf=true
                  <%= "checked" %>
                  <% } else { %>
                    data-on-shelf=false
                    <% } %>>
                    <%= shelf.escape('title') %>
                  </label>

                </div>
                <% })%>
                <!-- <div class="input new-shelf">
                <input type="checkbox"
                name="shelved_book[shelf]"
                value=""
                class="modal-new-checkbox">
                <input type="text"
                name="shelved_book[shelf]"
                placeholder="Enter new shelf"
                class="modal-text">
              </div> -->
              <button class="modal-close js-modal-close">Save</button>

            </form>
            <div class="modal-screen js-modal-close"></div>
          </div>
        </div>
      <% } %>

  </section>
