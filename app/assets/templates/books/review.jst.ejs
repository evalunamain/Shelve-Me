<article class="review">
  <!-- <img src="user-profile-pic" class="user-thumb"> -->
  <section class="review-book-rating">
    <form>
      <span class="rating"><h4><%= review.author().escape('name') %> rated it: </h4>
        <input type="radio" class="rating-static"
        id="rating-static-1-5" name="rating-static-1" value="5">
        <label for="rating-static-1-5" class="rating-star-static"></label>
        <input type="radio" class="rating-static"
        id="rating-static-1-4" name="rating-static-1" value="4">
        <label for="rating-static-1-4" class="rating-star-static"></label>
        <input type="radio" class="rating-static"
        id="rating-static-1-3" name="rating-static-1" value="3">
        <label for="rating-static-1-3" class="rating-star-static"></label>
        <input type="radio" class="rating-static"
        id="rating-static-1-2" name="rating-static-1" value="2">
        <label for="rating-static-1-2" class="rating-star-static"></label>
        <input type="radio" class="rating-static"
        id="rating-static-1-1" name="rating-static-1" value="1">
        <label for="rating-static-1-1" class="rating-star-static"></label>

      </span>
    </form>
  </section>
  <p><%= review.escape('content') %></p>
</article>
